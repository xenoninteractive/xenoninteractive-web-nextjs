# Root level EditorConfig file
root = true

# Add unix-style newlines to every file
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,yml,md,js,ts,jsx,tsx,css,json}]
charset = utf-8
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
